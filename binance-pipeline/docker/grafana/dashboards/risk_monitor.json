{
  "title": "Risk Monitor",
  "uid": "risk-monitor",
  "tags": ["crypto", "risk", "alerts"],
  "refresh": "10s",
  "time": { "from": "now-30m", "to": "now" },
  "timepicker": {},
  "schemaVersion": 39,
  "version": 2,
  "editable": true,
  "links": [
    {
      "asDropdown": false,
      "icon": "external link",
      "keepTime": true,
      "targetBlank": false,
      "title": "Market Overview",
      "tooltip": "View live market data",
      "type": "link",
      "url": "/d/market-overview"
    }
  ],
  "panels": [

    {
      "type": "stat", "id": 1,
      "title": "Volatility Alerts (last 5 min)",
      "description": "Windows where price_stddev exceeded the threshold (default: 2.0)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "#73BF69", "value": null },
            { "color": "#F2495C", "value": 1 }
          ]},
          "mappings": [],
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto", "textMode": "auto",
        "colorMode": "background", "graphMode": "none",
        "justifyMode": "center", "text": { "titleSize": 16, "valueSize": 52 }
      },
      "targets": [{ "refId": "A", "format": "table",
        "rawSql": "SELECT count(*) AS \"Volatility Alerts\" FROM trade_metrics WHERE volatility_alert = true AND window_start > now() - interval '5 minutes'"
      }]
    },

    {
      "type": "stat", "id": 2,
      "title": "Volume Spikes (last 5 min)",
      "description": "Windows where volume_spike flag fired (placeholder — requires rolling baseline)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "#73BF69", "value": null },
            { "color": "#F2495C", "value": 1 }
          ]},
          "mappings": [],
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto", "textMode": "auto",
        "colorMode": "background", "graphMode": "none",
        "justifyMode": "center", "text": { "titleSize": 16, "valueSize": 52 }
      },
      "targets": [{ "refId": "A", "format": "table",
        "rawSql": "SELECT count(*) AS \"Volume Spikes\" FROM trade_metrics WHERE volume_spike = true AND window_start > now() - interval '5 minutes'"
      }]
    },

    {
      "type": "stat", "id": 3,
      "title": "Spread Warnings (last 5 min)",
      "description": "Windows where avg_spread exceeded 3× the min spread in that window",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "#73BF69", "value": null },
            { "color": "#F2495C", "value": 1 }
          ]},
          "mappings": [],
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto", "textMode": "auto",
        "colorMode": "background", "graphMode": "none",
        "justifyMode": "center", "text": { "titleSize": 16, "valueSize": 52 }
      },
      "targets": [{ "refId": "A", "format": "table",
        "rawSql": "SELECT count(*) AS \"Spread Warnings\" FROM spread_metrics WHERE spread_warning = true AND window_start > now() - interval '5 minutes'"
      }]
    },

    {
      "type": "timeseries", "id": 4,
      "title": "Volatility Alert Timeline — StdDev at Alert Moments",
      "description": "Shows price standard deviation only for windows where volatility_alert fired. Each dot = one alert event.",
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 8 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "drawStyle": "line", "lineWidth": 0,
            "fillOpacity": 0, "showPoints": "always",
            "pointSize": 8, "spanNulls": false
          }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "BTC StdDev" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "#F7931A" } }] },
          { "matcher": { "id": "byName", "options": "ETH StdDev" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "#627EEA" } }] },
          { "matcher": { "id": "byName", "options": "BNB StdDev" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "#F3BA2F" } }] }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "none" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        { "refId": "BTC", "format": "time_series",
          "rawSql": "SELECT window_start AS time, CASE WHEN volatility_alert THEN price_stddev ELSE NULL END AS \"BTC StdDev\" FROM trade_metrics WHERE symbol='BTCUSDT' AND $__timeFilter(window_start) ORDER BY time" },
        { "refId": "ETH", "format": "time_series",
          "rawSql": "SELECT window_start AS time, CASE WHEN volatility_alert THEN price_stddev ELSE NULL END AS \"ETH StdDev\" FROM trade_metrics WHERE symbol='ETHUSDT' AND $__timeFilter(window_start) ORDER BY time" },
        { "refId": "BNB", "format": "time_series",
          "rawSql": "SELECT window_start AS time, CASE WHEN volatility_alert THEN price_stddev ELSE NULL END AS \"BNB StdDev\" FROM trade_metrics WHERE symbol='BNBUSDT' AND $__timeFilter(window_start) ORDER BY time" }
      ]
    },

    {
      "type": "table", "id": 5,
      "title": "Recent Anomaly Events",
      "description": "All windows where volatility_alert or volume_spike fired. Most recent first.",
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 10 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Time" },
            "properties": [{ "id": "custom.width", "value": 170 }]
          },
          {
            "matcher": { "id": "byName", "options": "Symbol" },
            "properties": [
              { "id": "custom.width", "value": 90 },
              { "id": "custom.displayMode", "value": "color-text" },
              { "id": "mappings", "value": [{ "type": "value", "options": {
                "BTCUSDT": { "color": "#F7931A", "index": 0 },
                "ETHUSDT": { "color": "#627EEA", "index": 1 },
                "BNBUSDT": { "color": "#F3BA2F", "index": 2 }
              }}]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Alert Type" },
            "properties": [
              { "id": "custom.displayMode", "value": "color-background" },
              { "id": "custom.width", "value": 160 },
              { "id": "custom.align", "value": "center" },
              { "id": "mappings", "value": [{ "type": "value", "options": {
                "Volatility + Spike": { "color": "#F2495C", "index": 0 },
                "Volatility":         { "color": "#FF9830", "index": 1 },
                "Volume Spike":       { "color": "#FADE2A", "index": 2 }
              }}]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "VWAP" },
            "properties": [
              { "id": "unit", "value": "currencyUSD" },
              { "id": "custom.width", "value": 130 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "StdDev" },
            "properties": [
              { "id": "decimals", "value": 4 },
              { "id": "custom.width", "value": 90 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Trades" },
            "properties": [{ "id": "custom.width", "value": 70 }]
          }
        ]
      },
      "options": {
        "sortBy": [{ "displayName": "Time", "desc": true }],
        "footer": { "show": false }
      },
      "targets": [{ "refId": "A", "format": "table",
        "rawSql": "SELECT window_start AS \"Time\", symbol AS \"Symbol\", CASE WHEN volatility_alert AND volume_spike THEN 'Volatility + Spike' WHEN volatility_alert THEN 'Volatility' WHEN volume_spike THEN 'Volume Spike' END AS \"Alert Type\", round(vwap::numeric, 2) AS \"VWAP\", round(price_stddev::numeric, 4) AS \"StdDev\", trade_count AS \"Trades\" FROM trade_metrics WHERE (volatility_alert = true OR volume_spike = true) AND $__timeFilter(window_start) ORDER BY window_start DESC LIMIT 100"
      }]
    },

    {
      "type": "table", "id": 6,
      "title": "Recent Spread Warnings",
      "description": "Windows where bid-ask spread widened beyond 3× the minimum spread.",
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 7 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Time" },
            "properties": [{ "id": "custom.width", "value": 170 }]
          },
          {
            "matcher": { "id": "byName", "options": "Symbol" },
            "properties": [
              { "id": "custom.width", "value": 90 },
              { "id": "custom.displayMode", "value": "color-text" },
              { "id": "mappings", "value": [{ "type": "value", "options": {
                "BTCUSDT": { "color": "#F7931A", "index": 0 },
                "ETHUSDT": { "color": "#627EEA", "index": 1 },
                "BNBUSDT": { "color": "#F3BA2F", "index": 2 }
              }}]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Avg Spread" },
            "properties": [
              { "id": "unit", "value": "currencyUSD" },
              { "id": "decimals", "value": 5 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Max Spread" },
            "properties": [
              { "id": "unit", "value": "currencyUSD" },
              { "id": "decimals", "value": 5 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Min Spread" },
            "properties": [
              { "id": "unit", "value": "currencyUSD" },
              { "id": "decimals", "value": 5 }
            ]
          }
        ]
      },
      "options": {
        "sortBy": [{ "displayName": "Time", "desc": true }],
        "footer": { "show": false }
      },
      "targets": [{ "refId": "A", "format": "table",
        "rawSql": "SELECT window_start AS \"Time\", symbol AS \"Symbol\", round(avg_spread::numeric, 5) AS \"Avg Spread\", round(max_spread::numeric, 5) AS \"Max Spread\", round(min_spread::numeric, 5) AS \"Min Spread\" FROM spread_metrics WHERE spread_warning = true AND $__timeFilter(window_start) ORDER BY window_start DESC LIMIT 50"
      }]
    }

  ]
}
