# Copy this file to .env and fill in your values

# Binance stream settings
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
TOPIC_TRADES=binance.trades
TOPIC_BOOK_TICKER=binance.book_ticker

# Health-check
HEALTH_PORT=8081

# TimescaleDB
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5433
TIMESCALEDB_DB=crypto
TIMESCALEDB_USER=crypto
TIMESCALEDB_PASSWORD=crypto_secret

# Consumer
CONSUMER_GROUP_ID=binance-buffer
CONSUMER_BATCH_SIZE=500
CONSUMER_FLUSH_INTERVAL=2.0
CONSUMER_HEALTH_PORT=8082

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# SMTP â€” Grafana reads these GF_ vars directly via env_file
GRAFANA_ALERT_EMAIL=your_email@example.com
GF_SMTP_ENABLED=true
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=your_email@example.com
GF_SMTP_PASSWORD=your_app_password
GF_SMTP_FROM_ADDRESS=your_email@example.com
